<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>filter_newUser</filter-name>
        <filter-class>Servlet.filter_newUser</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filter_newUser</filter-name>
        <url-pattern>/Register</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>New_user</servlet-name>
        <servlet-class>Servlet.New_user</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Servlet.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add_item</servlet-name>
        <servlet-class>Servlet.add_item</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete_item</servlet-name>
        <servlet-class>Servlet.delete_item</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>order_item</servlet-name>
        <servlet-class>Servlet.order_item</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>emp_changePass</servlet-name>
        <servlet-class>Servlet.emp_changePass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>emp_logout</servlet-name>
        <servlet-class>Servlet.emp_logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin_deleteEmp</servlet-name>
        <servlet-class>Servlet.admin_deleteEmp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>emp_payment</servlet-name>
        <servlet-class>Servlet.emp_payment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin_empdel</servlet-name>
        <servlet-class>Servlet.admin_empdel</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>New_user</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add_item</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delete_item</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>order_item</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>emp_changePass</servlet-name>
        <url-pattern>/changePass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>emp_logout</servlet-name>
        <url-pattern>/emp_logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin_deleteEmp</servlet-name>
        <url-pattern>/admin_deleteEmp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>emp_payment</servlet-name>
        <url-pattern>/emp_payment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin_empdel</servlet-name>
        <url-pattern>/admin_empdel</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
